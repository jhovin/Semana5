<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:src="@drawable/fondo2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/titulo_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/advantus"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/carnet_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/foto_carnet"
                android:layout_below="@id/carnet_photo"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="8dp"
            android:text="@string/full_name"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cargo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="@string/cargo_text"
            android:textAlignment="center"
            android:textStyle="bold"
            />
            <ImageView
                android:id="@+id/qr_barrex"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
